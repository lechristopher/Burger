<div class="wrapper">
  <div class="one">
    <h1>EAT DA BURGER</h1>
  </div>

  <div class="two">
    <h2>Booger List</h2>
    <ul>
      {{#each burgers}}
        {{#unless this.devoured}}
          <li>
            {{this.burger_name}}
            <form action="/{{this.id}}?_method=PUT" method="POST">
              <input type="hidden" name="devoured" value="true">
              <button type="submit">Devour it!</button>
            </form>
            <!-- {{> burgers}} -->
          </li>
        {{/unless}}
      {{/each}}
    </ul>
  </div>

  <div class="three">
    <h2>Eaten Burgers</h2>
    <ul>
      {{#each burgers}}
        {{#if this.devoured}}
          <li>
            {{this.burger_name}}
            <form action="/{{this.id}}?_method=PUT" method="POST">
              <input type="hidden" name="devoured" value="false">
              <button type="submit">Throw it up!</button>
            </form>
            <!-- {{> burgers}} -->
          </li>
        {{/if}}
      {{/each}}
    </ul>
  </div>

  <div class="four">
    <h2>Add a Burger</h2>
    <form class="create-update-form" action="/" method="POST">
      <div class="form-group">
        <label for="burger_name">Give It a Name!:</label>
        <input type="text" id="bu" name="burger_name">
      </div>
      <div class="form-group">
        <label for="devoured">How Hungry Are You?</label><br>
        <input type="radio" name="devoured" value="1" checked>Eat it now<br>
        <input type="radio" name="devoured" value="0"> Save for later
      </div>
      <button type="submit">Add Burger</button>
    </form>
  </div>
</div>
