<h1>Eat Da Burger</h1>

<h2>Choose a Burger</h2>

<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button type="submit">Eat it!</button>
        </form>

        {{!-- {{> burgers/delete-burger}} --}}
      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Eaten Burgers</h2>

<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="false">
          <button type="submit">Throw it up!</button>
        </form>

        {{!-- {{> burgers/delete-burger}} --}}
      </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <label for="bu">Burger Name</label>
    <input type="text" id="bu" name="name">
  </div>

   <div class="form-group">
    <label for="dev">Devoured</label><br>
    <input type="radio" name="devoured" value="1" checked> Eaten<br>
    <input type="radio" name="devoured" value="0">Eat this
  </div>

  <button type="submit">Add Burger</button>
</form>
